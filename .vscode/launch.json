  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "attach",
      "name": "Debug r3 (Xephyr)",
      "cargo": {
        "args": [
          "build",
          "--bin=r3",
          "--package=r3"
        ],
        "filter": {
          "name": "r3",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "xephyr.run",
      "postDebugTask": "clean-up"
    },
    {
      "type": "lldb",
      "request": "attach",
      "name": "DebugBreak r3 (Xephyr)",
      "cargo": {
        "args": [
          "build",
          "--bin=r3",
          "--package=r3"
        ],
        "filter": {
          "name": "r3",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "xephyr.debug",
      "postDebugTask": "clean-up"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'r3'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=r3",
          "--package=r3"
        ],
        "filter": {
          "name": "r3",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
